<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.booksystem.servlet.RegisterServlet</servlet-class>        
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.booksystem.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowBooks</servlet-name>
        <servlet-class>com.booksystem.servlet.ShowBooks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowBooks</servlet-name>
        <url-pattern>/showbooks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BorrowBook</servlet-name>
        <servlet-class>com.booksystem.servlet.BorrowBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BorrowBook</servlet-name>
        <url-pattern>/borrowbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AgainBorrowBook</servlet-name>
        <servlet-class>com.booksystem.servlet.AgainBorrowBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgainBorrowBook</servlet-name>
        <url-pattern>/againborrowbook</url-pattern>
    </servlet-mapping>
</web-app>